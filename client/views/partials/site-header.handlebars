<div class="site-header">
  <section class="outer-container">

    <div  class="site-header-menu-button">
      <core-icon-button icon="view-headline"></core-icon-button>
    </div><!-- site-header-menu-button -->

    <h1>PAMM</h1>

    <div class="site-header-menu">
      {{#each site.menus.main}}
        {{#exists auth}}
          {{#equals auth "loggedIn"}}
            {{#loggedIn ../../../user false}}
              <a class="site-header-menu-item" href="{{site.siteUrl}}{{link}}"><h4>{{text}}</h4></a>
            {{/loggedIn}}
          {{/equals}}

          {{#equals auth "notLoggedIn"}}
            {{#loggedIn ../../../user true}}
              <a class="site-header-menu-item" href="{{site.siteUrl}}{{link}}"><h4>{{text}}</h4></a>
            {{/loggedIn}}
          {{/equals}}

        {{else}}
          <a class="site-header-menu-item" href="{{site.siteUrl}}{{link}}"><h4>{{text}}</h4></a>
        {{/exists}}
      {{/each}}
    </div><!-- .site-header-menu -->
  </section><!-- .outer-container -->
</div><!-- .site-header -->
